<h1>Welcome to your dashboard!</h1>

<p><%= link_to "Create your profile", new_volunteer_path, :class => "btn btn-success btn-lg" %></p>

<p><%= link_to "See your profile", volunteer_path(@volunteer), :class => "btn btn-success btn-lg" %></p>

<p><%= link_to "Add a new donor", new_donor_path, :class => "btn btn-success btn-lg" %></p>


<h1>Your donors:</h1>
<ul>
<% if @volunteer.donors.any? %>
  <% @volunteer.donors.each do |donor| %>
  <li><%= link_to donor.name, donor_path(donor) %></li>
    <% if donor.updates.any? %>
    <ul>
      <% donor.updates.each do |update| %>
      <li><%= update.date %> | Note: <%= update.note %> </li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
  </ul>
<% end %>
