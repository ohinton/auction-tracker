<%= render "layouts/errors", :object => @update %>

<%= form_for [@donor, @update], remote: true, id:"new_update" do |f| %>
<%= f.hidden_field :donor_id, :value => @donor.id %>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :date %>
      <%= f.date_field :date, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :note %>
      <%= f.text_field :note, :class => "form-control" %>
    </div>
  </div>

  <%= f.submit :class => "btn btn-success"  %>
<% end %>
