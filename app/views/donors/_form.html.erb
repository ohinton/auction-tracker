<%= render "layouts/errors", :object => @donor %>

<%= form_for @donor do |f| %>
  <%= f.hidden_field :volunteer_id, :value => @volunteer.id, :id => "donor_volunteer_id" %>

  <div class="row">
    <div class="form-group col-md-5">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-5">
      <%= f.label :phone %>
      <%= f.telephone_field :phone, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-5">
      <%= f.label :email %>
      <%= f.email_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-5">
      <%= f.label :address %>
      <%= f.text_field :address, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-5">
      <%= f.label :city %>
      <%= f.text_field :city, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-5">
      <%= f.label :state %>
      <%= f.text_field :state, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-5">
      <%= f.label :zip %>
      <%= f.text_field :zip, :class => "form-control" %>
    </div>
  </div>

  <%= f.submit :class => "btn btn-success"  %>
<% end %>
