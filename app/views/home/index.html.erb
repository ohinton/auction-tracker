<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h1 class="header center teal-text text-lighten-2">Making Auctions Easier</h1>
      <div class="row center">
        <h5 class="header col s12 light">Auctionary helps you reach your fundraising goals by making it easier<br>
        to track and collect donations for your charity auction.</h5>
      </div>
      <div class="row center">
        <%if current_user%>
        <%= link_to "Sign In", new_user_session_path, :class => "btn-lg" %>
        <%else%>
        <%= link_to "Create A New Account", new_user_registration_path, :class => "btn-large waves-effect waves-light teal lighten-1", :id => "download-button" %>
        <%end%>
      </div>
      <br><br>
    </div>
  </div>
  <script script type="text/javascript">
    $('.parallax').parallax();
  </script>
  <div class="parallax"><img src="/images/auctionary-1.jpg" alt="landing page image 1"></div>
</div>

